{
  "extends": "@tsconfig/strictest",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "exclude": [
    "**/dist/**",
    "packages/*/pkg/**",
    "coverage/**",
    "packages/app-website/**"
  ]
}
